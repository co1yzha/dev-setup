{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name":"Python Debugger: CurrentFile",
            "type":"debugpy",
            "request":"launch",
            "program": "${file}",
            "console":"integratedTerminal",
            "cwd":"${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}"
            }
        },
        {
            "name":"Python Run: CurrentFile",
            "type":"debugpy",
            "request":"launch",
            "program": "${file}",
            "cwd":"${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}"
            }
        },
        {
            "name": "Python: Interactive Window",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}"
            },
            "justMyCode": true,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}",
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}"
            }
        },
        {
            "name": "Python Debugger: LangGraph",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/langgraph",
            "args": [
                "dev",
                "--allow-blocking",
                "--wait-for-client"
            ],
            "cwd": "${workspaceFolder}",
            "jinja": true,
            "justMyCode": true,
            "stopOnEntry": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}"
            }
        }
    ]
}
